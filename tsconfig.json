{
  "compilerOptions": {
    "exactOptionalPropertyTypes": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "target": "es2019"
  }
}
